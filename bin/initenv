#!/bin/bash

[[ -f ./.env ]] && rm ./.env
if [[ $OSTYPE == 'darwin'* ]]; then
    cp ./.env-mac ./.env
else
    if [[ -f ~/.config/environment/.env ]]; then
        ln -sf ~/.config/environment/.env ./.env
    else 
        cp ./.env-linux ./.env
    fi
fi

if [[ -f ~/.config/environment/db.env ]]; then
    [[ -f ./env/db.env ]] && rm ./env/db.env
    ln -sf ~/.config/environment/db.env ./env/db.env
fi
